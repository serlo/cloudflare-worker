{
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true,
        "isolatedModules": true
      }
    ]
  },
  "extensionsToTreatAsEsm": [".ts", ".tsx", ".mts"],
  "testPathIgnorePatterns": ["/node_modules/", "/__tests__\\/__utils__/"],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "workerIdleMemoryLimit": "1GB"
}

{
  "name": "@serlo/serlo.org-cloudflare-worker",
  "version": "0.0.0",
  "private": true,
  "bugs": {
    "url": "https://github.com/serlo/serlo.org-cloudflare-worker/issues"
  },
  "repository": "serlo/serlo.org-cloudflare-worker",
  "license": "Apache-2.0",
  "author": "Serlo Education e.V.",
  "type": "module",
  "scripts": {
    "build": "wrangler deploy --dry-run --outdir=dist",
    "check:all": "scripts/run_all_checks.sh",
    "dev": "wrangler dev --env staging",
    "deploy": "wrangler publish",
    "format": "run-s --continue-on-error \"format:*\"",
    "format:eslint": "yarn _eslint --fix",
    "format:prettier": "yarn _prettier --write",
    "lint": "run-p \"lint:*\"",
    "lint:eslint": "yarn _eslint",
    "lint:prettier": "yarn _prettier --check",
    "lint:tsc": "tsc --noEmit",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:staging": "cross-env TEST_ENVIRONMENT=staging jest --runInBand",
    "test:production": "cross-env TEST_ENVIRONMENT=production jest --runInBand",
    "show-unused-exports": "ts-unused-exports tsconfig.json --excludePathsFromReport=__tests__/__utils__/index.ts",
    "_eslint": "eslint \"{{__fixtures__,__tests-pacts__,__tests__,scripts,src}/**/*,*}.{js,jsx,ts,tsx}\"",
    "_prettier": "prettier ."
  },
  "dependencies": {
    "fp-ts": "^2.16.0",
    "io-ts": "^2.2.20",
    "jose": "^4.14.4",
    "marked": "^5.1.1",
    "preact": "^10.16.0",
    "preact-render-to-string": "^6.1.0",
    "sanitize-html": "^2.11.0",
    "toucan-js": "^3.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "@iarna/toml": "^2.2.5",
    "@jest/globals": "^29.6.1",
    "@sentry/types": "^7.58.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/preact": "^3.2.3",
    "@types/iarna__toml": "^2.0.2",
    "@types/jest": "^29.5.3",
    "@types/marked": "^5.0.0",
    "@types/node": "^20.4.2",
    "@types/sanitize-html": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "glob": "^10.3.3",
    "jest": "^29.6.1",
    "msw": "^1.2.2",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.5",
    "prettier-plugin-sh": "^0.12.8",
    "ts-jest": "^29.1.1",
    "ts-unused-exports": "^9.0.5",
    "typescript": "^5.1.6",
    "wrangler": "^3.1.1"
  },
  "packageManager": "yarn@3.6.0",
  "engines": {
    "node": "^18.0.0"
  }
}

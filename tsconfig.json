{
  "include": ["*.js", "*.ts", "__tests__", "scripts", "src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "checkJs": true,
    "incremental": true,
    "outDir": "dist",
    "noEmit": true,
    "target": "es2022",
    "lib": ["es2022"],
    "jsx": "react",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "types": ["@cloudflare/workers-types/2022-11-30", "jest", "node"]
  }
}
